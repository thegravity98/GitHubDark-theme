    "terminal.integrated.letterSpacing": 1,
    "editor.fontFamily": "Lexend Light", //Download it from Google fonts. Note: Install for all users. Link in readme.
    "editor.fontSize": 14.7,
    "editor.letterSpacing": 0.5,
    "editor.lineHeight": 22,
    "workbench.colorCustomizations": 
    {
        "editor.background": "#1F2428", //Match color with primary (left) sidebar panel
        "editor.lineHighlightBackground": "#15181b", //to increases focus of current line
        "editor.lineHighlightBorder": "#15181b"
